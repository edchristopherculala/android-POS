<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/select_sales"
    android:background="@color/white"
    android:layout_marginTop="6dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:background="@color/blue"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"

            >
            <TextView
                android:id="@+id/textview_receiptnumbersales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Receipt #:"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/segoeui"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp"

                />
            <TextView
                android:id="@+id/txtreceiptnumbersales"
                android:layout_toRightOf="@id/textview_receiptnumbersales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="na"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/segoeui"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/one"
            android:layout_below="@id/title"

            >
            <TextView
                android:id="@+id/textview_suplier_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date:"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/segoeui"
                />
            <TextView
                android:id="@+id/txtDateSales"
                android:layout_toRightOf="@id/textview_suplier_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="na"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/segoeui"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/one">
            <TextView
                android:id="@+id/textview_supplier_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount:"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/segoeui"
                />
            <TextView
                android:id="@+id/txtAmountSales"
                android:layout_toRightOf="@id/textview_supplier_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="na"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/segoeui"
                />

            <ImageView
                android:id="@+id/buttonViewSales"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:background="@drawable/view"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="6dp"
                />

        </RelativeLayout>






    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/select_layout_4"
    android:background="@drawable/rounded_border_items"
    android:layout_marginTop="3dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"

    >
    <RelativeLayout
        android:id="@+id/first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/txtSupplierName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Supplier Name"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:fontFamily="@font/segoeui"
            />

        <TextView
            android:id="@+id/txtSupplierCode"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/txtSupplierName"
            android:layout_height="wrap_content"
            android:text="Code"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/segoeui"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/first"

        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/one"

            >
            <TextView
                android:id="@+id/textview_suplier_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address:"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/segoeui"
                />
            <TextView
                android:id="@+id/txtSuplierAddress"
                android:layout_toRightOf="@id/textview_suplier_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="na"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/segoeui"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/one">
            <TextView
                android:id="@+id/textview_supplier_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/segoeui"
                />
            <TextView
                android:id="@+id/txtSupplierEmail"
                android:layout_toRightOf="@id/textview_supplier_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="na"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/segoeui"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/second"
            >
            <TextView
                android:id="@+id/textview_supplier_telephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telephone:"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/segoeui"
                />
            <TextView
                android:id="@+id/txtSupplierTelephone"
                android:layout_toRightOf="@id/textview_supplier_telephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="na"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/segoeui"
                />

            <ImageView
                android:id="@+id/circularEditS"
                android:layout_alignParentRight="true"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:visibility="visible"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/editcircularbutton"
                />

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>